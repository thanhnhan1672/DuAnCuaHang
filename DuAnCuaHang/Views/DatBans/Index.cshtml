@model IEnumerable<DuAnCuaHang.Models.DatBan>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
        <!-- Đoạn cần thêm -->
        @Html.ActionLink("Nhập họ tên", "Index", new { sortProperty = "Title", sortOrder = ViewBag.SortOrder })
        <!-- Kết thúc -->
            </th>
        <th>
            @Html.ActionLink("Ngày Đặt", "Index", new { sortProperty = "ReleaseData", sortOrder = ViewBag.SortOrder })
        </th>
        <th>
            @Html.ActionLink("Số ĐT", "Index", new { sortProperty = "Genre", sortOrder = ViewBag.SortOrder })
        </th>
        <th>
            @Html.ActionLink("Combo Giá", "Index", new { sortProperty = "Price", sortOrder = ViewBag.SortOrder })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Xem", "Details", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
